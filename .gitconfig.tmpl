[push]
	default = simple
[core]
	autocrlf = input
	editor = nvim
[diff]
	tool = nvimdiff
	algorithm = patience
    indentHeuristic =true
[merge]
	tool = nvimdiff
[difftool]
	prompt = true
[mergetool]
	prompt = true
	keepBackup = false
[difftool "nvimdiff"]
    cmd = nvim -d $BASE $LOCAL
[mergetool "nvimdiff"]
    cmd = nvim $MERGED
[help]
	autocorrect = 15
